<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>venkatramans@dummyco.com.acctpoc</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Step 1</label>
        <name>Step_1</name>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>!ISBLANK( For_User__c ) &amp;&amp; !ISBLANK( From_Date__c ) &amp;&amp; !ISBLANK( To_Date__c ) &amp;&amp; ISPICKVAL(Status__c, &#39;Saved&#39;)</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Email_Elevated_Access_Request_Status</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Set_Approval_Date_Time</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Set_EAR_Status_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Approver_ID</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Email_Elevated_Access_Request_Status</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Set_Approval_Status_to_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Approver_ID</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Save_Current_Profile_ID</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_EAR_Status_to_Submitted</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Approve Elevated Access Request</label>
    <recallActions>
        <action>
            <name>Set_Approval_Status_to_Saved</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
